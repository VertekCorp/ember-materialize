{{#em-card title="Forms" as |card|}}
  {{#card.content}}
    <div class="section">
      <h5 class="title">Inputs</h5>

      <div class="section">
        <p>A basic text input with a label</p>
        {{em-input label="Full Name" model=person path="name"}}
      </div>

      <div class="section">
        <p>A text input with an icon</p>
        {{em-input label="Email" icon="email" model=person path="email"}}
      </div>

      <div class="section">
        <p>A text input with a placeholder</p>
        {{em-input placeholder="Your name here"}}
      </div>

      <div class="section">
        <p>A disabled text input</p>
        {{em-input label="Name" disabled=true}}
      </div>

      <div class="section">
        <p>A password input</p>
        {{em-input label="Password" type="password"}}
      </div>

      <div class="section">
        <p>A phone number input</p>
        {{em-phone-input model=person path="phone" label="Phone Number"}}
      </div>

      <div class="section">
        <p>A number input with min/max</p>
        {{em-input label="Number of pets" model=person path="age" type="number" min=0 max=10}}
      </div>

      <h5>Selects</h5>

      <div class="section">
        <p>A basic select input</p>
        {{em-select label="Your Options"
          content=selectOptions
          optionLabelPath="value" optionValuePath="value"
          value=selectedOption}}
        <p>You selected: {{selectedOption}}</p>
      </div>

      <div class="section">
        <p>A select input binding to an object</p>
        {{em-select label="Your Options"
          content=selectOptions
          optionLabelPath="value"
          optionValuePath="value"
          selection=selectedObject}}
        <p>You selected: {{selectedObject}} - ({{selectedObject.value}})</p>
      </div>

      <div class="section">
        <p>A pre-selected select input</p>
        {{em-select label="Your Options"
          content=selectOptions
          optionLabelPath="value" optionValuePath="value"
          value=preSelectedOption}}
        <p>Pre-Selected: {{preSelectedOption}}</p>
      </div>

      <h5>Checkbox</h5>

      <div class="section">
        <p>A basic checkbox</p>
        {{em-checkbox label="Cats" value="cats" checked=true on-checked-change=(action "doit")}}
        {{em-checkbox label="Dogs" value="dogs" checked=false on-checked-change=(action "doit")}}
        {{em-checkbox label="Squids" value="squids" checked=true on-checked-change=(action "doit")}}
      </div>

      <div class="section">
        <p>A basic filled checkbox</p>
        {{em-checkbox label="Cats" value="cats" checked=true on-checked-change=(action "doit") filled=true}}
        {{em-checkbox label="Dogs" value="dogs" checked=false on-checked-change=(action "doit") filled=true}}
        {{em-checkbox label="Squids" value="squids" checked=true on-checked-change=(action "doit") filled=true}}
      </div>

    </div>
  {{/card.content}}
{{/em-card}}
